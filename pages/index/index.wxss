/**index.wxss**/

.home_container{
  overflow: hidden;
}

/*切换操作区域*/
.swith_tab{
  text-align: center;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.swith_tab .tab-item{
  display: inline-block;
  margin:0 50rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  height: 50rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  border-bottom: 5rpx solid transparent;
}

.swith_tab .tab-item.active{
  color: #4fe3c1;
  border-bottom: 5rpx solid #4fe3c1;
}

.tab-content swiper-item{
  overflow-y: auto;
}

/*搜索区域*/
.search_form .section{
  display: flex;
  flex-direction: row; 
  align-items: center;
  height: 65rpx;
  background-color: #fff;
  border-radius: 50rpx;
  width: 80%;
  margin: 0 auto;
  padding-left: 30rpx;
}

.search_form .section > text {
  padding-left: 15rpx;
  color: #c7c7c7;
}

/*列表展示区域*/

.author {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}

.author > image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.author > image,.author > text {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.author > text.name {
  color: #337ab7;
}

.article_content > text.name {
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.article_content > text.content {
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box; 
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  margin-top: -25rpx;
}